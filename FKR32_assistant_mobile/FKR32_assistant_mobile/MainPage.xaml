<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FKR32_assistant_mobile.MainPage">

    <StackLayout VerticalOptions="Center">
       
        <Label
            AutomationId="OpenCalculatorPage"
            HorizontalOptions="Center"
            Text="Open Calculator Page"
            VerticalOptions="Center"
            FontSize="Large">
            
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OpenCalculatorPage_OnTapped" />
            </Label.GestureRecognizers>
        </Label>

        <Label
            AutomationId="OpenAuthorizationPage"
            HorizontalOptions="Center"
            Text="Open Authorization Page"
            VerticalOptions="Center"
            FontSize="Large">

            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OpenAuthorizationPage_OnTapped" />
            </Label.GestureRecognizers>
        </Label>

    </StackLayout>

</ContentPage>
