<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FKR32_assistant_mobile.AuthorizationPage">
    <ContentPage.Content>
        <StackLayout>
            <Label  Text="Enter your name"
                    VerticalOptions="CenterAndExpand" 
                    TextColor="Black" FontSize="40" 
                    HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="NameEntry" 
                   AutomationId="AuthorizationName" 
                   FontSize="40"/>
            <Button Text="AddName"
                    AutomationId="ButtonAuthorization" 
                    BackgroundColor="Gainsboro"
                    TextColor="Black" FontSize="40" 
                    Clicked="AddAuthorization_Clicked"/>
            <Label x:Name="ResultAuthorizationLabel"
                   AutomationId="AuthorizationLabel" FontSize="40"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>